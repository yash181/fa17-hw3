<%= form_tag students_path do %>
  <%= label_tag(:student_name, "Full name") %>
  <%= text_field_tag(:student_name, nil, placeholder: @placeholder_name) %>

  <%= label_tag(:c_name, "Course name") %>
  <%= text_field_tag(:c_name, nil, placeholder: @placeholder_course) %>

  <%= label_tag(:age, "Age") %>
  <%= text_field_tag(:age, nil, placeholder: @placeholder_age) %>

  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>

  <%= submit_tag("Create Student") %>
<% end %>